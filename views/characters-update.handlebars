<div class="container">
	<div class="col-lg-12">
		<div id="character-form">

			<h1>Update Character:</h1>
			<form id="update-character" action="/characters/" method="post">

				<label>Name</label>
				<input type="text" name="name" class="form-control" required value="{{character.Name}}">
		
				<label>Race</label>
				<input type="text" name="race" class="form-control" required value="{{character.Race}}">
		
				<label>Alignment</label>
				<br>
				<select name="alignment" id="alignment-selector">
					<option value="Hero">Hero</option>
					<option value="Villain">Villain</option>
				</select><br>

				<label>Home Planet</label>
				<br>
				<select name="homeplanet" id="planet-selector"> 
					{{#each planets}}
					<option value="{{ID}}">{{NAME}}</option>
					{{/each}}
				</select><br><br>

			</form>
			<button class="btn btn-primary" onclick="updateCharacter({{character.id}})">Update</button>
			<a href='../characters/' class="btn btn-danger" style="margin-left: 15px">Cancel</a>
			<script defer>selectPlanet({{character.Planet}});</script>
			<script defer>selectAlignment({{character.Alignment}});</script>
		</div>
	</div>
